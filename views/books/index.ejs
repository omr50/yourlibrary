<% layout('layouts/boilerplate') %>
    <h1>All books</h1>
    <div>
        <a href="/books/new"><button class="btn btn-success mb-2">Add Book</button></a>
    </div>
    <% for (let book of books) { %>

        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=book.image%>" alt="">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= book.title%>
                        </h5>
                        <p class="card-text">
                            <%=book.description%>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%=book.genre%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/books/<%=book._id%>">View <%=book.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>